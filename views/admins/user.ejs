<% layout('layouts/boilerplate')%>
   
<h1>User List</h1>
<div class="mb-3">
   <a class="btn btn-primary" href="/movies">All Movies</a>
</div>

<div class="table-responsive mt-3 mb-3">
  <table class="table table-dark table-hover" style="border: 1px ridge white; font-family:Arial, Helvetica, sans-serif;">
      <thead style="text-align: center;">
          <tr>
            <th scope="col">#</th>
            <th scope="col">User_Id</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Delete</th>
          </tr>
      </thead>
      <tbody style="text-align: center;">
      <% let i=1 %>
      <% for(let user of users) { %>
          <tr>
            <td><%= i++ %></td>
            <td><%= user._id %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td>
              <form action="/admin/user/<%= user._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
      <% } %>
      </tbody>
  </table>
</div>
