<% layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">Edit Movie</h1>
    <div class="col-md-6 offset-md-3">
        <div class="card shadow mb-5">
            <div class="card-body bg-dark text-white">
                <form action="/movies/<%= movie._id %>?_method=PUT" method="POST" novalidate class="validated-form"
                    enctype="multipart/form-data">

                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="movie[title]"
                            value="<%= movie.title %>" required>
                        <div class="valid-feedback text-success">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="director">Director</label>
                        <input class="form-control" type="text" id="director" name="movie[director]"
                            value="<%= movie.director %>" required>
                        <div class="valid-feedback text-success">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="imdb_rating">IMDB Rating &#9733</label>
                        <input type="text" class="form-control" id="imdb_rating" placeholder="0/10"
                            aria-label="imdb_rating" aria-describedby="imdb_rating-label"
                            name="movie[imdb_rating]" value="<%= movie.imdb_rating %>" required>
                        <div class="valid-feedback text-success">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="budget">Budget (Crore)</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">&#8377</span>
                            <input type="text" class="form-control" id="budget" placeholder="0.00"
                                aria-label="budget" aria-describedby="budget-label"
                                name="movie[budget]" value="<%= movie.budget %>" required>
                            <div class="valid-feedback text-success">
                                Looks good!
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="box_office_collection">Box Office Collection (Crore)</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">&#8377</span>
                            <input type="text" class="form-control" id="box_office_collection" placeholder="0.00"
                                aria-label="box_office_collection" aria-describedby="box_office_collection-label"
                                name="movie[box_office_collection]" value="<%= movie.box_office_collection %>" required>
                            <div class="valid-feedback text-success">
                                Looks good!
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" name="movie[description]"
                            required><%= movie.description %></textarea>
                        <div class="valid-feedback text-success">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Add more image(s)...</label>
                        <input class="form-control" type="file" id="image" name="image" multiple>
                    </div>
                    <div class="mb-3">
                        <% movie.images.forEach(function(img, i) { %>
                            <div class="d-inline mx-1">
                                <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                                <!-- <div class="form-check-inline"> -->
                                <input type="checkbox" id="image-<%= i %>" name="deleteImages[]"
                                    value="<%= img.filename %>">
                                <!-- </div> -->
                                <label for="image-<%= i %>">Delete?</label>
                            </div>
                            <% }) %>
                    </div>

                    <div class="mb-2">
                        <button class="btn btn-info mt-2 me-3">Update Movie</button>
                        <a class="btn btn-primary mt-2" href="/movies/<%= movie._id%>">Back To Movie</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>