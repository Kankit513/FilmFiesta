
<script>
  var isOpen = false;
  function show() {
    isOpen = !(isOpen)
    if (isOpen) {
      var s = document.getElementsByClassName("consider");
      s[0].style.display = "block";
    }
    else {
      var s = document.getElementsByClassName("consider");
      s[0].style.display = "none";
    }
  }

  function hide(){
    var h = document.getElementsByClassName("consider");
    h[0].style.display = "none";
    isOpen = !(isOpen)
  }
</script>



