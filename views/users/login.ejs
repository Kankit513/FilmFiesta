<% layout('layouts/boilerplate') %>

    <div class="container justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow mb-4">
                    <img src="https://images.unsplash.com/photo-1521249635712-69ca33adf729?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80"
                        alt="" class="card-img-top" />
                    <div class="card-body bg-dark text-white">
                        <h5 class="card-title">Login</h5>
                        <form action="/login" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus
                                    required>
                                <div class="valid-feedback text-success">
                                    Looks good!
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback text-success">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-2">
                                <button class="btn btn-success mt-2 me-3">Login</button>
                                <a href="/register" class="btn btn-primary mt-2">New User</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>